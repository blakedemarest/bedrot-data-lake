# PostgreSQL Database Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bedrot_analytics

# Application Database User (created by init_db.py)
POSTGRES_USER=bedrot_app
POSTGRES_PASSWORD=your_secure_password_here

# Admin User for Database Creation (usually 'postgres')
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=your_admin_password_here

# ETL Configuration
CURATED_DATA_PATH=/path/to/bedrot/data_lake/curated
BATCH_SIZE=1000
LOG_LEVEL=INFO

# Optional: Docker Configuration
POSTGRES_DOCKER_IMAGE=postgres:15
POSTGRES_DOCKER_PORT=5432