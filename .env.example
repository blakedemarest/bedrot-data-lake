# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_secure_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_REGION=us-east-1

# Data Lake Directories
PROJECT_ROOT=YOUR/ABSOLUTE/PATH/TO/data_lake
LANDING_ZONE=/data/landing
RAW_ZONE=/data/raw
STAGING_ZONE=/data/staging
CURATED_ZONE=/data/curated
ARCHIVE_ZONE=/data/archive
SANDBOX_ZONE=/data/sandbox

# DistroKid Credentials for Automation
# Set your DistroKid login email and password for Playwright automation.
# These are used ONLY for automated extraction and are not shared externally.
DK_EMAIL=your_email@example.com
DK_PASSWORD=your_password

TOOLOST_EMAIL=your_toolost_email@example.com
TOOLOST_PASSWORD=your_toolost_password

GITHUB_ACCESS_TOKEN=your_github_token

META_ACCESS_TOKEN=your_meta_access_token
META_AD_ACCOUNT_ID=your_meta_ad_account_id
